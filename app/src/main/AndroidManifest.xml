<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Medicare.NoActionBar"
        tools:ignore="AllowBackup"
        tools:replace="android:theme">
        <activity
            android:name=".ui.colorGenerate.ColorantsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.colorGenerate.ColorSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.colorGenerate.FandeckActivity"
            android:exported="false" />
        <activity
            android:name=".ui.webView.WebViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.DataPullActivity"
            android:exported="false" />
        <activity
            android:name=".ui.languageSelectionActivity.LanguageSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.about.AboutAppActivity"
            android:exported="true" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Medicare.OnBoarding">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.OnBoardingActivity"
            android:theme="@style/Theme.Medicare.OnBoarding" />
    </application>

</manifest>