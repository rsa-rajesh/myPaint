<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Medicare.OnBoarding" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/activity_main_exit</item>
        <item name="android:windowReenterTransition">@transition/activity_main_reenter</item>
    </style>

    <style name="Theme.Medicare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark_text</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Medicare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>